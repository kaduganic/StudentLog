<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/main_app_theme"
    android:weightSum="1"><![CDATA[>



    ]]>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtImePrezimeKreiranjeKoda"
        android:layout_weight="0.06" />

    <TextView
        android:text="Kreiranje Koda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNaslovKreiranjeKoda"
        android:layout_weight="0.27"
        android:textSize="36sp"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:hint="Unesite sifru dolaska"
            android:ems="10"
            android:id="@+id/edTxtUnosKreiranjaKoda"
            android:layout_weight="1"
            android:textAlignment="center" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spnrPopisKolegijaKreiranjeKoda"
            android:layout_weight="1"
            android:textAlignment="center"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:id="@+id/dtDatumKreirajKod"
        android:headerBackground="@android:color/holo_blue_light"
        android:layout_gravity="center"
        style="@android:style/Widget.DatePicker"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="213dp"

        android:id="@+id/imgQRcode"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:textAlignment="center"
        android:layout_weight="0.21"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <Button
            android:text="Generiraj QR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGenerirajQRcode"
            android:layout_weight="1" />

        <Button
            android:text="Spremi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSpremiQR"
            android:layout_weight="1.21" />
    </LinearLayout>

</LinearLayout>